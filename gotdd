#/bin/sh

export GOPATH=`pwd`

fswatch=`which fswatch`
inotifywait=`which inotifywait`

srcdir="src"
pkgname=`ls -1 ${srcdir}`

# For fswatch 

if [ ${#fswatch} -gt 0 ]; then
  ${fswatch} -o ${srcdir} | xargs -n1 -I{} go test -v ${pkgname}
  exit 0
fi

# For inotifywait

if [ ${#inotifywait} -gt 0 ]; then
  while ${inotifywait} -qr -e modify ${srcdir}; do
    go test -v ${pkgname}
  done
fi

exit 1
