version=$(git describe | awk 'BEGIN { FS = "-" } ; { print $1 }')

cat <<EOF
// Copyright 2015 The go-net-upnp Authors. All rights reserved.
// Use of this source code is governed by a BSD-style
// license that can be found in the LICENSE file.

package util

import (
	"fmt"
	"runtime"
)

func GetUserAgent() string {
	return fmt.Sprintf("%s/%s UPnP/1.1 go-net-upnp/%s",
		runtime.GOOS,
		runtime.GOARCH,
		$(grep ProductName src/net/upnp/const.go | head -n 1 | awk '{print $3}'),
		$(grep SupportVersion src/net/upnp/const.go | head -n 1 | awk '{print $3}'),
		"$version")
}
EOF
